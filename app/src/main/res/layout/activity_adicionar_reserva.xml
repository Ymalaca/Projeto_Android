<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="130dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/cadastroDeReserva"
        android:layout_below="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAÃ‡A SUA RESERVA"
        android:textSize="25dp"
        android:layout_marginHorizontal="85dp"
        android:textColor="#000000" />

    <EditText
        android:background="@drawable/edit_text"
        android:padding="10dp"
        android:layout_below="@+id/cadastroDeReserva"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:id="@+id/NomeReservante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome" />

    <EditText
        android:background="@drawable/edit_text"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/NomeReservante"
        android:id="@+id/TelefoneReservante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone"
        />

    <EditText
        android:background="@drawable/edit_text"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/TelefoneReservante"
        android:id="@+id/CpfReservante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CPF"
        />

    <Button
        android:background="@drawable/botao"
        android:layout_below="@id/CpfReservante"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="130dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        />
</RelativeLayout>