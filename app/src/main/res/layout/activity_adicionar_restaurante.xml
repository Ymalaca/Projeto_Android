<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient">
    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/cadastroDeRestaurante"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro de Restaurante"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#000000" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cadastroDeRestaurante"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:id="@+id/NomeRestaurante"
                android:layout_marginHorizontal="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Nome" />

            <EditText
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/NomeRestaurante"
                android:id="@+id/TelefoneRestaurante"
                android:layout_marginHorizontal="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Telefone"
                />

            <EditText
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/TelefoneRestaurante"
                android:id="@+id/CepRestaurante"
                android:layout_marginHorizontal="30dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Cep"
                />
            <Button
                android:layout_marginTop="7dp"
                android:background="@drawable/botao2"
                android:layout_marginHorizontal="50dp"
                android:layout_below="@+id/TelefoneRestaurante"
                android:layout_alignParentRight="true"
                android:id="@+id/BotaoBuscarCep"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Buscar"/>

            <EditText
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/CepRestaurante"
                android:id="@+id/RuaRestaurante"
                android:layout_marginHorizontal="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Rua"
                />

            <EditText
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/RuaRestaurante"
                android:id="@+id/BairroRestaurante"
                android:layout_marginHorizontal="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Bairro"
                />

            <EditText
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/BairroRestaurante"
                android:id="@+id/CidadeRestaurante"
                android:layout_marginHorizontal="30dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Cidade"
                />

            <Button
                android:background="@drawable/botao"
                android:layout_below="@id/CidadeRestaurante"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="130dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Cadastrar"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
